<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>
{{# each products}}
<div class="row">
    {{# each this}}
  <div class="col-sm-4 col-md-3">
    <div class="thumbnail">
      <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
      <div class="caption">
        <h3>{{ this.title }}</h3>
        <p class="description"> {{ this.description }}</p>
        <div class="clearfix">
            <div class="price pull-left">{{ this.prize }}</div> 
            <a href="/add-to-cart/{{ this._id }}" class="btn btn-success pull-right" role="button">Add to shopping cart</a>
        </div>
      </div>
    </div>
  </div>
  {{/ each}}

  
</div>
{{/ each}}



